<h1>
  <%= @list.item %>
</h1>

<br />
<h3>
  Item completed: <%= @list.done %>
</h3>

<div class='action buttons'>
  <%= link_to 'Update', edit_list_path(@list) %>
  <%= link_to 'Delete', list_path(@list),
  method: :delete,
  data: {confirm: "Really Delete?"} %>
  <%= link_to 'Back to List', lists_path %>
</div>