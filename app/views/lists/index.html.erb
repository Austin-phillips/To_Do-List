<h1>To-Do List</h1>

<hr />

<% if @lists.any?%>


  <table style='width:50%;'>

    <tr>
      <th>Task</th>
      <th>Completed</th>
    </tr>
    <tr><% @lists.each do |list| %>
      <td>
        <center><%= link_to list.item, list_path(list) %></center>
      </td>
      <td>
        <h3>
          <center><%= list.done ? 'yes' : 'no' %></center>
        </h3>
      </td>
    </tr>
    <% end %>
  </table>
<% else %>
  <h3>No items on the list, please add one.</h3>
<% end %>

<hr />

<%= link_to 'New Item', new_list_path %>

